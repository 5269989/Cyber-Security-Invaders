import RPi.GPIO as GPIO
import time

# Define the GPIO pins connected to segments 'a' and 'f'
SEGMENT_A = 4
SEGMENT_F = 17

# Setup GPIO
def setup():
    GPIO.setmode(GPIO.BCM)  # Use BCM pin numbering
    GPIO.setup(SEGMENT_A, GPIO.OUT)  # Set GPIO 4 as an output
    GPIO.setup(SEGMENT_F, GPIO.OUT)  # Set GPIO 17 as an output

# Light up segments 'a' and 'f'
def light_up_segments():
    GPIO.output(SEGMENT_A, GPIO.LOW)  # Set to LOW to light up segment 'a'
    GPIO.output(SEGMENT_F, GPIO.LOW)  # Set to LOW to light up segment 'f'

# Turn off segments 'a' and 'f'
def turn_off_segments():
    GPIO.output(SEGMENT_A, GPIO.HIGH)  # Set to HIGH to turn off segment 'a'
    GPIO.output(SEGMENT_F, GPIO.HIGH)  # Set to HIGH to turn off segment 'f'

# Main function
def main():
    try:
        setup()
        
        while True:
            light_up_segments()  # Light up both segments 'a' and 'f'
            print("Segments 'a' and 'f' are lit")
            time.sleep(2)  # Keep them lit for 2 seconds
            
            turn_off_segments()  # Turn off both segments 'a' and 'f'
            print("Segments 'a' and 'f' are off")
            time.sleep(2)  # Pause for 2 seconds before repeating

    except KeyboardInterrupt:
        print("\nProgram interrupted by user")
    finally:
        GPIO.cleanup()  # Clean up GPIO on exit

if __name__ == "__main__":
    main()
